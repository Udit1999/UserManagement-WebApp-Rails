<h2>Edit User</h2>

<%= form_for @user,  :url => users_other_edit_path(:id=>@user.id),   html: { method: :put } do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :usertype %><br />
    <%= f.text_field :usertype, autocomplete: "Admin, Manager, Normal" %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel this account</h3>
<p><%= button_to "Cancel this account", users_other_edit_path(:id=>@user.id), 
                data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
